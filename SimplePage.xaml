<Page
    x:Class="Magic_Redone.SimplePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Magic_Redone"
    xmlns:local2="clr-namespace:Magic_Redone.Simple"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DataContext="{d:DesignInstance Type=local2:SimplePageVM}"
    Title="Magic Redone"
    d:DesignHeight="866"
    d:DesignWidth="1466"
    mc:Ignorable="d">

    <Page.Resources>
        <local2:StrToIntConverter x:Key="StrToIntConverter" />
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <!--  Разделитель  -->
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Панель кнопок  -->
        <DockPanel
            Grid.Row="0"
            Margin="0"
            LastChildFill="False">
            <Button
                Margin="5,0"
                Click="BackButton_Click"
                Content="Назад"
                DockPanel.Dock="Left" />
        </DockPanel>

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{StaticResource FancyTextPanelBorder}">
            <TextBox
                MinWidth="20"
                Margin="0"
                Foreground="White"
                Text="{Binding Points, Mode=TwoWay, Converter={StaticResource StrToIntConverter}, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap" />
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="5,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Style="{StaticResource FancyTextPanelBorder}">
            <StackPanel Orientation="Vertical">
                <TextBlock
                    Margin="2"
                    Foreground="White"
                    Text="Способ" />
                <ComboBox
                    Foreground="White"
                    ItemsSource="{Binding MethodColl}"
                    SelectedItem="{Binding Method}"
                    ToolTip="Способ воздействия" />
            </StackPanel>
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="5,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Style="{StaticResource FancyTextPanelBorder}">
            <StackPanel Orientation="Vertical">
                <TextBlock
                    Margin="2"
                    Foreground="White"
                    Text="Форма" />
                <ComboBox
                    Foreground="White"
                    ItemsSource="{Binding FormColl}"
                    SelectedItem="{Binding Form}"
                    ToolTip="Форма воздействия" />
            </StackPanel>
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="2"
            Margin="5,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Style="{StaticResource FancyTextPanelBorder}">
            <StackPanel Orientation="Vertical">
                <TextBlock
                    Margin="2"
                    Foreground="White"
                    Text="Размер" />
                <TextBox
                    Margin="0,10,0,0"
                    Foreground="White"
                    Text="{Binding Size, Mode=TwoWay, Converter={StaticResource StrToIntConverter}, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="3"
            Margin="5,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Style="{StaticResource FancyTextPanelBorder}">
            <StackPanel Orientation="Vertical">
                <TextBlock
                    Margin="2"
                    Foreground="White"
                    Text="Время" />
                <ComboBox
                    Foreground="White"
                    ItemsSource="{Binding TimeExistColl}"
                    SelectedItem="{Binding TimeExist}"
                    ToolTip="Время существования заклинания" />
                <TextBlock
                    Margin="0,10,0,0"
                    Foreground="White"
                    Text="" />
            </StackPanel>
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="4"
            Margin="5,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Style="{StaticResource FancyTextPanelBorder}">
            <StackPanel Orientation="Vertical">
                <TextBlock
                    Margin="2"
                    Foreground="White"
                    Text="Время создания" />
                <ComboBox
                    Foreground="White"
                    ItemsSource="{Binding TimeCastColl}"
                    SelectedItem="{Binding TimeCast}"
                    ToolTip="Время, требуемое для создания заклинания" />
            </StackPanel>
        </Border>

        <Border
            Grid.Row="1"
            Grid.Column="4"
            Margin="5,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Style="{StaticResource FancyTextPanelBorder}">
            <StackPanel Orientation="Vertical">
                <TextBlock
                    Margin="2"
                    Foreground="White"
                    Text="Время создания" />
                <TextBlock
                    Margin="0,10,0,0"
                    Foreground="White"
                    Text="" />
            </StackPanel>
        </Border>
        <Border
            Grid.Row="1"
            Grid.Column="3"
            Margin="5,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Style="{StaticResource FancyTextPanelBorder}">
            <StackPanel Orientation="Vertical">
                <TextBlock
                    Margin="2"
                    Foreground="White"
                    Text="Время" />
                <TextBlock
                    Margin="0,10,0,0"
                    Foreground="White"
                    Text="" />
            </StackPanel>
        </Border>
        <Border
            Grid.Row="1"
            Grid.Column="2"
            Margin="5,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Style="{StaticResource FancyTextPanelBorder}">
            <StackPanel Orientation="Vertical">
                <TextBlock
                    Margin="2"
                    Foreground="White"
                    Text="Размер" />
                <TextBlock
                    Margin="0,10,0,0"
                    Foreground="White"
                    Text="" />
            </StackPanel>
        </Border>
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="5,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Style="{StaticResource FancyTextPanelBorder}">
            <StackPanel Orientation="Vertical">
                <TextBlock
                    Margin="2"
                    Foreground="White"
                    Text="Форма" />
                <TextBlock
                    Margin="0,10,0,0"
                    Foreground="White"
                    Text="" />
            </StackPanel>
        </Border>
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="5,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Style="{StaticResource FancyTextPanelBorder}">
            <StackPanel Orientation="Vertical">
                <TextBlock
                    Margin="2"
                    Foreground="White"
                    Text="Способ" />
                <TextBlock
                    Margin="0,10,0,0"
                    Foreground="White"
                    Text="" />
            </StackPanel>
        </Border>

        <Border
            Grid.Row="2"
            Grid.Column="0"
            Margin="5,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Style="{StaticResource FancyTextPanelBorder}">
            <StackPanel Orientation="Vertical">
                <TextBlock
                    Margin="2"
                    Foreground="White"
                    Text="Итог"
                    ToolTip="Итоговая цена в очках, после модификаторов" />
                <TextBlock
                    Margin="0,10,0,0"
                    Foreground="White"
                    Text="{Binding Total}" />
            </StackPanel>
        </Border>


        <GridSplitter
            Grid.RowSpan="3"
            Grid.Column="6"
            Width="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch" />
    </Grid>
</Page>
